<div class="d-flex justify-content-center">
    <form id="formCar" class="w-50" action="/api/car" method="POST">
        
        <input id="id" name="id" value="" type="text" class="form-control" autocomplete="off" readonly placeholder="ID" />

        <input id="name" name="name" type="text" value="" class="form-control" autocomplete="off" placeholder="Car name" />

        <div class="row">
            <div class="col">
                <input id="type" name="type" type="text" class="form-control m-0" autocomplete="off" placeholder="Car type" />
            </div>
            <div class="col">
                <input id="fuel_type" name="fuel_type" type="text" class="form-control m-0" autocomplete="off" placeholder="Fuel type" />
            </div>
            <div class="col">
                <input id="price" name="price" type="number" class="form-control m-0" autocomplete="off" placeholder="Price" />
            </div>
        </div>
        <div class="form-group">
            <label class="form-check-label">EcoFriendly</label>
            <input id="eco_type_Yes" name="eco_type" value="Yes" class="form-check form-check-inline" type="radio" checked />
            <label for="eco_type_Yes" class="form-check-label">Yes</label>
            <input id="eco_type_No" name="eco_type" value="No" class="form-check form-check-inline" type="radio" id="radio-2" />
            <label for="eco_type_No" class="form-check-label">No</label>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-success" id="btn-create">Create</button>
            <button class="btn btn-primary" id="btn-read">Read</button>
            <button href="/api/update/:id" class="btn btn-warning" id="btn-update">Update</button>
        </div>
    </form>
</div>